{
  "name": "solana_security_token",
  "version": "1.0.0",
  "description": "Security Token Standard program for Solana",
  "private": true,
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "build-all": "pnpm build && pnpm generate-idl && pnpm generate-clients",
    "deploy:all": "pnpm deploy:program && pnpm deploy:transfer-hook",
    "deploy:program": "./scripts/deploy.sh && ./scripts/deploy-transfer-hook.sh",
    "deploy:transfer-hook": "./scripts/deploy-transfer-hook.sh",
    "generate-clients": "node ./scripts/generate-clients.js",
    "generate-idl": "shank idl -r program -o idl",
    "setup": "./scripts/setup.sh",
    "test": "pnpm build && SBF_OUT_DIR=$(pwd)/target/deploy cargo test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoodieshq/security-token.git"
  },
  "keywords": [],
  "author": "SSTS Foundation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hoodieshq/security-token/issues"
  },
  "homepage": "https://github.com/hoodieshq/security-token#readme",
  "dependencies": {
    "@codama/errors": "^1.3.2",
    "@codama/nodes": "^1.3.2",
    "@codama/renderers-core": "^1.0.18",
    "@codama/renderers-rust": "^1.2.1",
    "@codama/visitors-core": "^1.3.2",
    "@codama/nodes-from-anchor": "^1.2.0",
    "@codama/renderers": "^1.0.23",
    "codama": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
